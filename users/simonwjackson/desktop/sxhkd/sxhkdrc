# Switch to the {west,south,north,east} window
super + {h,j,k,l}
  awesome-client 'require("awful").client.focus.bydirection("{left,down,up,right}")'

# close
super + x
  kill-or-close


# toggle floating
super + ctrl + space
  awesome-client "require('awful').client.floating.toggle(client.focus)"

# move to master
super + ctrl + Return
  awesome-client "client.focus:swap(require('awful').client.getmaster())"
#
 Toggle between awful.layout.suit.tile and awful.layout.suit.tile.left
super + t
  awesome-client "local awful = require('awful'); local cur_layout = awful.layout.getname(); if cur_layout == 'tile' then awful.layout.set(awful.layout.suit.tile.left); else awful.layout.set(awful.layout.suit.tile); end"


# Toggle between max layout and previous layout
super + m
  awesome-client 'local awful = require("awful"); if not string.match(awful.layout.getname(), "max") then prev_layout = awful.layout.get(); awful.layout.set(awful.layout.suit.max); else awful.layout.set(prev_layout); end'

# Toggle between fullscreen layout and previous layout
super + shift + m
  awesome-client 'local awful = require("awful"); if not string.match(awful.layout.getname(), "max.fullscreen") then prev_layout = awful.layout.get(); awful.layout.set(awful.layout.suit.max.fullscreen); else awful.layout.set(prev_layout); end'

super + Tab
  awesome-client "require('awful').client.focus.byidx(1)"

super + shift + Tab
  awesome-client "require('awful').client.focus.byidx(-1)"

# Resize the window {,(slowly)} to the {west,south,north,east}
super + shift + {Left,Down,Up,Right}
  wm {grow,grow,shrink,shrink} awesome

# Resize the current window to 16:9 aspect ratio
super + comma
  awesome-client "local awful = require('awful'); local c = client.focus; if c then local width = c.width; local height = math.floor(width * 9 / 16); c:geometry({height = height}); end"



