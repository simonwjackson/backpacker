# Cycle through desktops
super + {Down,Up}
  bspc desktop -f {prev,next}.local


# (?) focus the next or previous desktop
super + shift + {Down,Up}
  bspc node -d next


# move window to another desktop
super + apostrophe
  bspc node -m next --follow

# Move desktop to another monitor 
super + alt + apostrophe
  desk=`bspc query -D -d focused`; bspc desktop -m {prev,next}; bspc desktop -f $desk




# ███████╗ ██████╗██████╗ ███████╗███████╗███╗   ██╗███████╗
