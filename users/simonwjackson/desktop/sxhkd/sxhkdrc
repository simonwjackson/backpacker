# View tag only
super + {4-6}
  awesome-client "local s = require('awful').screen.focused(); local t = s.tags[{1-3}]; if t then t:view_only() end"

# Move client to tag
super + shift + {4-6}
  awesome-client "if client.focus then local t = client.focus.screen.tags[{1-3}]; if t then client.focus:move_to_tag(t) end end"
      
# go back
super + Escape
  awesome-client "require('awful').tag.history.restore()"                                                                       l

super + 0
  awesome-client 'Set_Inner_Padding(0)' && awesome-client 'Set_Outer_Margin(0)'

super + {KP_Add,minus}
  awesome-client 'Inc_Inner_Padding({10,-10})'

super + shift + {KP_Add,minus}
  awesome-client 'Inc_Outer_Margin({10,-10})'


