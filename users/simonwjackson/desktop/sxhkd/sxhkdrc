# Brightness Up
XF86MonBrightnessUp
  sudo brightnessctl set 5%+


# Brightness Down
XF86MonBrightnessDown
  sudo brightnessctl -e set 5%-


# Bluetooth Devices
super + r; b
  kitty-popup bluetooth-devices


# Activate blutooth device
super + t
  bt list | rofi -dmenu | awk '{print $1}' | xargs bt activate




