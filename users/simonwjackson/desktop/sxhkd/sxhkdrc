# Switch to different layouts using sequence keybindings
# Cascade all windows and resize windows bigger than 75% of the screen size
super + alt + l; f
  awesome-client "local awful = require('awful'); local capi = {client = client}; local t = awful.screen.focused().selected_tag; local x_offset = 100; local y_offset = 100; local wa = awful.screen.focused().workarea; local x = wa.x + x_offset; local y = wa.y + y_offset; local max_width = wa.width * 0.75 local max_height = wa.height * 0.75; for i, c in ipairs(t:clients()) do if not c.floating and not c.minimized then local width = c.width; local height = c.height; if width > max_width then width = max_width; end; if height > max_height then height = max_height; end; c:geometry({x = x, y = y, width = width, height = height}); x = x + x_offset; y = y + y_offset; end; end; awful.layout.set(awful.layout.suit.floating);"

