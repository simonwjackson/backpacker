# Kill Focused Window
super + x
  kill-or-close

# Toggle fullscreen mode
super + m
  bspc desktop -l next


# Resize the window {,(slowly)} to the {west,south,north,east}
super + shift {_,+ ctrl} + {Left,Down,Up,Right}
  STEP={100,20}; SELECTION={1,2,3,4}; bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)


# Switch to the {previous,next} window
super + {i,o}
  awesome-client 'require("awful").client.focus.history.previous()'
  # bspc node -f {prev,next}.local

# Switch to the {west,south,north,east} window
super + {h,j,k,l}
  awesome-client 'require("awful").client.focus.bydirection("{left,down,up,right}")'

# super + {h,j,k,l}
  # [[ $(bspc query -T -d | jq -er '.layout == "tiled"') == "true" ]] && bspc node -f {west,south,north,east}.local || bspc node {prev.!hidden.window.local,next.!hidden.window.local,prev.!hidden.window.local,next.!hidden.window.local} --focus


# Nav: {Switch to,Send window} {,to} desktop {I,II,III,VII,VIII,IX}
# super + {_,alt + }{1-3,7-9}
#  bspc {desktop -f,node -d} {I,II,III,VII,VIII,IX}


# Move window to the {Left,Right} monitor
super + alt + ctrl + {h,l} 
  bspc node --to-monitor {west,east} --follow


# Nav: Move the window {west,south,north,east}
super + ctrl + {h,j,k,l}
  bspc node -s {west,south,north,east}


# Nav: Create a location ({west,south,north,east}) for the next window
super + shift + {h,j,k,l}
  bspc node -p {west,south,north,east}


# Nav: Jump to the {previous,next} window
super + {o,i}
  bspc wm -h off; bspc node {older,newer} -f; bspc wm -h on


# Cycle windows {Counter,Clock}wise
super + alt + {Left,Right}
  bspc node @/ -C {backward,forward}

# Resize window to 16:9
super + comma
  resize-window 16 9




