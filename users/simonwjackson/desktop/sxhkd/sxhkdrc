super + v
  op item list --vault Private | rofi -dmenu


# List: All apps
super + space
  rofi -show drun -p Apps


# Sxhkdrc Cheat Sheet
super + period
  ${HOME}/.local/bin/hkhelper.py | rofi -dmenu -i | awk -F '[[:space:]][[:space:]]+' '{print $3}' | xargs xargs




